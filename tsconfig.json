{
    "compilerOptions": {
        "target": "ES2020",
        "module": "None",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outFile": "./dist/main.js"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}